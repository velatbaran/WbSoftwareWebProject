@model WbSoftwareWebProject.Entities.Entity.References
@{
    ViewBag.Title = "Referans Yorum Durumu Güncelleme";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-10">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
</div>
<div class="row">
    @using (Html.BeginForm("Edit", "References", FormMethod.Post))
    {
        <div class="form-horizontal">
            <div class="col-md-6 col-offset-1">
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    @Html.LabelFor(model => model.CommentStatus, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.CommentStatus)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 text-center">
                        <button type="submit" class="btn btn-success" title="Güncelle"><span class="glyphicon glyphicon-edit"></span> Güncelle</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


