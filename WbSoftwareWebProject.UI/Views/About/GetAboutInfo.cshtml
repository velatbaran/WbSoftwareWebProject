@using WbSoftwareWebProject.Entities.Entity
@using WbSoftwareWebProject.UI
@model List<About>


<section id="about" class="about">
    <!-- ======= About Me ======= -->
    <div class="about-me container">

        <div class="section-title">
            <h2>Hakkımızda</h2>
            <p>Hakkımda daha fazla bilgi öğren</p>
        </div>
        <div class="row">
            @foreach (About item in Model)
            {
                <div class="col-lg-4" data-aos="fade-right">
                    <img src="~/Content/images/@item.ProfileImage" class="img-fluid" alt="" width="400" height="400">
                </div>
                <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
                    <h3>Bilgisayar Mühendisi (2010 - 2015)</h3>
                    <p class="fst-italic">
                        @item.ShortText
                    </p>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Doğum Günü:</strong> <span>20 Mayıs 1990</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>http://www.welatbaran.somee.com</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>0539 371 1268</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span>Diyarbakır, TÜRKİYE</span></li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong> <span>31</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Eğitim:</strong> <span>Lisans</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@item.Email</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>Müsait</span></li>
                            </ul>
                        </div>
                    </div>
                    <p>
                        @item.LongText
                    </p>
                </div>
            }
        </div>

    </div><!-- End About Me -->
    <!-- ======= Interests ======= -->
