@model WbSoftwareWebProject.Entities.Entity.Projects

<!-- Vendor CSS Files -->
<link href="~/Content/Personal/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<link href="~/Content/Personal/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
<link href="~/Content/Personal/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
<link href="~/Content/Personal/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
<link href="~/Content/Personal/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
<link href="~/Content/Personal/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
<link href="~/Content/Personal/assets/css/style.css" rel="stylesheet">

<main id="main">

    <!-- ======= Portfolio Details ======= -->
    <div id="portfolio-details" class="portfolio-details">
        <div class="container">

            <div class="row">

                <div class="col-lg-8">
                    <h2 class="portfolio-title">@Model.ProjectName projesinin detay bilgileri</h2>

                    <div class="portfolio-details-slider swiper">
                        <div class="swiper-wrapper align-items-center">

                            <div class="swiper-slide">
                                <img src="~/Content/images/projects/@Model.Image1" alt="">
                            </div>

                            <div class="swiper-slide">
                                <img src="~/Content/images/projects/@Model.Image2" alt="">
                            </div>

                            <div class="swiper-slide">
                                <img src="~/Content/images/projects/@Model.Image3" alt="">
                            </div>

                        </div>
                        <div class="swiper-pagination"></div>
                    </div>

                </div>

                <div class="col-lg-4 portfolio-info">
                    <h3>Proje Bilgisi</h3>
                    <ul>
                        <li><strong>Kategori</strong>: @Model.Services.Title</li>
                        <li><strong>Müşteri</strong>: @Model.Customer</li>
                        <li><strong>Proje Tarihi</strong>: @Model.ProjectDate.ToShortDateString()</li>
                        <li><strong>Proje URL</strong>: <a href="#">#</a></li>
                        <li><strong>Kullanışan Teknolojiler</strong>: @Model.UsedTeknologies</li>
                    </ul>
                    <p>
                        <strong>Açıklama</strong>: @Model.Description
                    </p>
                </div>

            </div>
            <div class="row">
                <div class="col-md-10">
                    &nbsp;
                </div>
                <div class="col-md-2">
                    <button type="button" class="btn btn-outline-success btn-lg float-right" title="Referans Ekle" data-project-id="@Model.Id" data-bs-toggle="modal" data-bs-target="#add_reference">Referans Ekle</button>
                </div>
            </div>
        </div>
    </div><!-- End Portfolio Details -->

</main><!-- End #main -->

<!-- Vendor JS Files -->
<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Content/Personal/assets/vendor/purecounter/purecounter.js"></script>
<script src="~/Content/Personal/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/Content/Personal/assets/vendor/glightbox/js/glightbox.min.js"></script>
<script src="~/Content/Personal/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
<script src="~/Content/Personal/assets/vendor/swiper/swiper-bundle.min.js"></script>
<script src="~/Content/Personal/assets/vendor/waypoints/noframework.waypoints.js"></script>
<script src="~/Content/Personal/assets/vendor/php-email-form/validate.js"></script>

<!-- Template Main JS File -->
<script src="~/Content/Personal/assets/js/main.js"></script>

@MyBootstrap.ModalPopup(id: "add_reference", title: "Referans Ekle")

<script src="~/Scripts/custom_references.js"></script>